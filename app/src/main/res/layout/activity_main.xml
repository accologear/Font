<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                android:textSize="14sp" />

            <com.tikerdev.views.TDevTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ไม่เลือกฟ้อน"
                android:textSize="14sp"
                tools:text="ทดสอบ" />

            <com.tikerdev.views.TDevTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ฟ้อนจากระบบ"
                android:textSize="14sp"
                app:fontName="Kanit"
                tools:text="ทดสอบ" />

            <com.tikerdev.views.TDevTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ฟ้อนจากระบบ"
                android:textSize="14sp"
                app:fontName="CSChatThaiUI"
                tools:text="ทดสอบ" />

            <com.tikerdev.views.TDevTextView
                android:id="@+id/tvText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="เลือกฟ้อนเอง"
                android:textSize="14sp"
                tools:text="ทดสอบ" />


            <com.tikerdev.views.TDevButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ไม่เลือกฟ้อน" />

            <com.tikerdev.views.TDevButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ฟ้อนจากระบบ"
                app:fontName="Kanit" />

            <com.tikerdev.views.TDevButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ฟ้อนจากระบบ"
                app:fontName="CSChatThaiUI" />

            <com.tikerdev.views.TDevButton
                android:id="@+id/btnFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="เลือกฟ้อนเอง" />

            <com.tikerdev.views.TDevEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ฟ้อนจากระบบ" />

            <com.tikerdev.views.TDevEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ฟ้อนจากระบบ" />

            <com.tikerdev.views.TDevEditText
                android:id="@+id/edtFontSystem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ฟ้อนจากระบบ" />

            <com.tikerdev.views.TDevEditText
                android:id="@+id/edtFontSystemHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ฟ้อนจากระบบ" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
